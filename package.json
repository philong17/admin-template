{
  "name": "react-admin-template",
  "private": true,
  "version": "1.0.0",
  "description": "React + TypeScript + Vite admin dashboard template with Mantine UI and TailwindCSS",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:staging": "env-cmd -f .env.dev vite build",
    "build:production": "vite build --mode production",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "prettier": "prettier --check \"src/**/(*.tsx|*.ts|*.css|*.scss)\"",
    "prettier:fix": "prettier --write \"src/**/(*.tsx|*.ts|*.css|*.scss)\"",
    "fix": "yarn lint:fix && yarn prettier:fix",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "cf:preview": "wrangler pages dev dist",
    "deploy": "wrangler pages deploy dist",
    "cf:build": "yarn build && wrangler pages deploy dist"
  },
  "dependencies": {
    "@mantine/charts": "^8.2.7",
    "@mantine/core": "^8.1.3",
    "@mantine/dates": "^8.1.3",
    "@mantine/dropzone": "^8.3.8",
    "@mantine/form": "^8.1.1",
    "@mantine/hooks": "^8.1.3",
    "@mantine/notifications": "^8.1.3",
    "@tailwindcss/vite": "^4.0.8",
    "@tanstack/react-query": "^5.80.7",
    "axios": "^1.10.0",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "js-cookie": "^3.0.5",
    "mantine-form-zod-resolver": "^1.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.2.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.8",
    "zod": "^3.25.67",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.11.6",
    "@eslint/js": "^9.19.0",
    "@julr/vite-plugin-validate-env": "^1.3.0",
    "@tanstack/eslint-plugin-query": "^5.78.0",
    "@types/crypto-js": "^4.2.2",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "wrangler": "^4.31.0"
  }
}
